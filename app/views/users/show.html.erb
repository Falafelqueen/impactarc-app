 <div class="container">
  <div class="top-bar">
  <div class="top-left"></div>
  <div class="top-right"></div>
  <h6>Saved organisations:</h6>
    <%= current_user.organisations.count %>
  </div>
  <div class="content-container">
  <div class="side-bar">
    <div class="side-bar-content">
      <div class="user-info">
        <%= current_user.email %>
      </div>
    </div>
  </div>
    <div class="org-grid">
      <% unless @organisations.nil? || @organisations == [] %>
          <%= render @organisations %>
      <% end %>
    </div>
  </div>
 </div>

<div class="container">
  <div class="filter-bar">
    <div class="filter-left">
      <%= image_tag "icons/filter_icon.svg" %>
      <% @filters.each do |filter| %>
      <div class="filter-selected">
       <%= filter.upcase %>
      </div>
      <% end %>
    </div>
    <div class="filter-right">
      <%= image_tag "icons/sort_icon.svg", id:"sort-icon" %>
    </div>
  </div>
  <div class="content-container">
    <div class="side-bar">
      <% if params[:commit].present? %>
        <%= link_to "Show all", organisations_path %>
      <% end %>
      <h1>Filter bar</h1>
      <%= form_with url: organisations_path, method: :get, id:"filter-form" do  %>
      <%= submit_tag "Apply filters", class:"filter-btn" %>
      <div class="form-group categories-main">
        <%= fields_for @category do |c| %>
          <% @main_categories.each do |category| %>
            <%= c.check_box :category_id, {:multiple => true }, category.id, false %>
            <%= c.label category.name, category.name.upcase %>
          <% end %>
        <% end %>
      </div>
      <div data-controller="visibility" class="expand-btn">
        <div data-action="click->visibility#showTargets" data-visibility-target="showBtn"><%= image_tag "icons/plus_icon.svg" %>Expand selection</div>
        <div data-action="click->visibility#hideTargets" data-visibility-target="hideBtn" hidden><%= image_tag "icons/minus_icon.svg" %>Minimize selection</div>
        <div class="expand-box" data-visibility-target="hideable" hidden>
          <div class="form-group other-categories">
              <%= fields_for @category do |c|%>
                <% @other_categories.each do |category| %>
                   <%= c.check_box :category_id, {:multiple => true }, category.id, false %>
                  <%= c.label category.name, category.name.upcase %>
                <% end %>
              <% end %>
          </div>
          <div class="form-group organisation-size">
            <h4>Organisation size</h4>
            <%= radio_button_tag :size, "small" %>
            <%= label_tag :size_small, "Small" %>
            <%= radio_button_tag :size, "medium" %>
            <%= label_tag :size_medium, "Medium" %>
            <%= radio_button_tag :size, "large" %>
            <%= label_tag :size_large, "Large" %>
          </div>
          <div class="form-group volunteering">
            <%= check_box_tag :volunteering, "true" %>
            <%= label_tag :volunteering, "Volunteer opportunities" %>
          </div>
        </div>
      </div>
      <div class="form-group english">
        <%= check_box_tag :english, "true" %>
        <%= label_tag :english, "English" %>
      </div>
      <% end %>
    </div>
    <div class="org-grid">
    <% unless @organisations.nil? || @organisations == [] %>
      <% @organisations.sort_by{|org| org.name}.each do |organisation| %>
          <% unless organisation.nil? %>
        <div class="org-card">
        <div class="org-card-logo">
          <% unless organisation.photo.key.nil? %>
            <div class="logo-frame">
                <%= cl_image_tag organisation.photo.key, height: 300, width:400, crop: :fit, class: "org-logo" %>
            </div>
          <% end %>
        </div>
        <div class="org-card-info" data-name="<%= organisation.name %>">
          <h3><%= organisation.name %></h3>
          <h4><%= organisation.subheading %></h4>
        </div>
        </div>
          <% end %>
        <% end %>
    <% end %>
    </div>
  </div>

  <%= link_to "Create new organisation", new_organisation_path %>
</div>

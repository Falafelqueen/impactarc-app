<div class="container">
  <div class="filter-bar">
    <div class="filter-left">
      <%= image_tag "icons/filter_icon.svg" %>
      <% @filters.each do |filter| %>
      <div class="filter-selected">
       <%= filter.upcase %>
      </div>
      <% end %>
    </div>
    <div class="filter-right">
      <%= image_tag "icons/sort_icon.svg", id:"sort-icon" %>
    </div>
  </div>
  <div class="content-container">
    <div class="side-bar">
      <% if params[:applied_filter].present? %>
        <%= link_to "Show all", organisations_path %>
      <% end %>
      <h1>Filter bar</h1>
      <%= form_with url: organisations_path, method: :get, id:"filter-form" do  %>
      <h5>Main categories</h5>
      <div class="form-group categories-main">
        <%= fields_for @category do |c| %>
          <% @main_categories.each do |category| %>
            <%= c.check_box :category_id, {:multiple => true, id: category.name }, category.id, false %>
            <%= c.label category.name, category.name.upcase %>
          <% end %>
        <% end %>
      </div>
      <div data-controller="visibility">
        <div class="filter-control" data-action="click->visibility#showTargets" data-visibility-target="showBtn"><%= image_tag "icons/plus_icon.svg" %> Expand selection </div>
        <div class="filter-control" data-action="click->visibility#hideTargets" data-visibility-target="hideBtn" hidden><%= image_tag "icons/minus_icon.svg" %> Minimize selection</div>
        <div class="expand-box" data-visibility-target="hideable" hidden>
        <h5>Other categories</h5>
          <div class="form-group other-categories">
              <%= fields_for @category do |c|%>
                <% @other_categories.each do |category| %>
                    <%= c.check_box :category_id, {:multiple => true, id: category.name }, category.id, false %>
                    <%= c.label category.name, category.name.capitalize, class:"other-category-label" %>
                <% end %>
              <% end %>
          </div>
            <h5>Organisation size</h5>
          <div class="form-group organisation-size">
            <%= radio_button_tag :size, "small" %>
            <%= label_tag :size_small, "Small" %>
            <%= radio_button_tag :size, "medium" %>
            <%= label_tag :size_medium, "Medium" %>
            <%= radio_button_tag :size, "large" %>
            <%= label_tag :size_large, "Large" %>
          </div>
          <h5>Other</h5>
          <div class="form-group volunteering">
            <%= check_box_tag :volunteering, "true" %>
            <%= label_tag :volunteering, "Volunteer opportunities" %>
          </div>
        </div>
      </div>
      <div class="form-group english">
        <%= check_box_tag :english, "true" %>
        <%= label_tag :english, "ENGLISH" %>
      </div>
      <%= hidden_field_tag "applied_filter", :true %>
        <%= button_tag :submit, class:"filter-btn" do%>
            <%= image_tag "icons/filter_white_icon.svg" %>
            <p>Apply filters</p>
        <% end %>
      <% end %>
    </div>



        <div class="org-grid">
            <% unless @organisations.nil? || @organisations == [] %>
              <% @organisations.sort_by{|org| org.name}.each do |organisation| %>
                <% unless organisation.nil? %>
                  <div data-controller="expandorg">
                  <div class="org-card">
                    <div class="org-card-logo">
                      <% unless organisation.photo.key.nil? %>
                      <div class="logo-frame">
                        <%= cl_image_tag organisation.photo.key, height: 300, width:400, crop: :fit, class: "org-logo" %>
                      </div>
                      <% end %>
                    </div>
                    <div class="org-card-text">
                      <div class="org-card-info" data-name="<%= organisation.name %>">
                        <h3><%= organisation.name.upcase %></h3>
                        <h4><%= organisation.subheading %></h4>
                      </div>
                      <div class="org-card-foot" data-expandorg-target="expandOrgBtn" data-action="click->expandorg#showOrganisation">
                        <%= image_tag "icons/expand_org_icon.svg", alt: "expand organisation icon", class: "expand-org-btn" %>
                      </div>
                    </div>
                  </div>
                    <div class="org-preview" data-expandorg-target="orgpreview" hidden>
                      <div class="org-preview-card">
                        <div class="preview-top">
                          <div class="close-btn" data-action="click->expandorg#showIndex" data-expandorg-targets="closePreviewBtn">Close</div>
                        </div>
                        <div class="preview-content">

                          <div class="logo">logo</div>
                          <div class="preview-head">
                            <h3><%= organisation.name.upcase %></h3>
                            <h4><%= organisation.subheading %></h4>
                          </div>
                          <div class="characteristics">
                            <% unless organisation.size.nil? %>
                              <div class="characteristics-item">
                                <%= image_tag "icons/orgsize_icon.svg"%>
                                <h5><%=organisation.size.capitalize %> organization</h5>
                              </div>
                            <% end %>
                            <% unless organisation.volunteering.nil? %>
                               <div class="characteristics-item">
                                <%= image_tag "icons/volunteering_icon.svg"%>
                                <h5>Volunteering opportunities</h5>
                              </div>
                            <% end %>
                            <% unless organisation.internship.nil? %>
                              <div class="characteristics-item">
                                <%= image_tag "icons/internship_icon.svg"%>
                                <h5>Internship programme</h5>
                              </div>
                            <% end %>
                            <% unless organisation.unsolicited.nil? %>
                              <div class="characteristics-item">
                                <%= image_tag "icons/unsolicited_icon.svg"%>
                                <h5>Open to unsolicited applications</h5>
                              </div>
                            <% end %>
                            <% unless organisation.english.nil? %>
                              <div class="characteristics-item">
                                <%= image_tag "icons/english_icon.svg"%>
                                <h5>English speaking opportunities</h5>
                              </div>
                            <% end %>
                          </div>
                          <div class="preview-body">
                            <p><%= organisation.description %></p>
                          </div>
                          <div class="map">map</div>
                          <div class="preview-foot">
                            <div class="contact">
                              <h3>Contact</h3>
                              <a href="<%= organisation.website%>" target="_blank"><p><%= format_url(organisation.website)%></p></a>
                              <p><%= organisation.email%></p>
                              <h5>Address</h5>
                              <p><%= organisation.street %></p>
                              <p><%= organisation.city %></p>
                              <p><%= organisation.zip %></p>
                              <p><%= organisation.country %></p>
                            </div>
                            <div class="some-links">
                              <%= link_to organisation.facebook, target: :_blank  do %>
                                <%= image_tag "icons/fb_icon.svg" %>
                              <% end %>
                              <%= link_to organisation.linkedin, target: :_blank do %>
                                <%= image_tag "icons/linkedin_icon.svg" %>
                              <% end %>
                            </div>
                          </div>



                        </div>

                      </div>
                    </div>
                  <% end %>
                </div>
                <% end %>
              <% end %>
          </div>


  </div>

  <%= link_to "Create new organisation", new_organisation_path %>
</div>

<div class="login-container">
  <h2>Log in</h2>
  <h6>Log in to save your search and contact organizations easily.</h6>
  <div class="standard-form login">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name),
    html: {novalidate: true},
    data: {
      controller:"form",
      form_target:"form",
      action:"focusout->form#validateField",
    } ) do |f| %>
      <div class="field">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", required: true%>
        <%= f.label :email %>
        <p class="hidden-message">Valid email needed. Please check whether you typed in your email correctly(xx@xx.xx).</p>
      </div>
      <div class="field">
        <%= f.password_field :password, autocomplete: "current-password", required: true, minlength: 6 %>
        <%= f.label :password %>
         <p class="hidden-message">Wrong password. Password needs to be at least 6 characters</p>
         <%= link_to "Forgot your password?", new_password_path(resource_name), class:"right-aligned-link" %>
      </div>
      <div class="actions">
        <%= f.submit "Log in", data: {action: "click->form#submitForm"}, class: "normal-btn centered-btn" %>
      </div>
    <% end %>
  </div>
  <div class="dividor">
    <div class="line"></div>
    <div class="purple-text">OR</div>
    <div class="line"></div>
  </div>
  <div class="social-login-holder">
      <%= link_to user_google_oauth2_omniauth_authorize_path, method: :post, class:"social-login-btn" do %>
        <div class="content-login-btn">
            <p>Sign in with Google</p>
            <%= image_tag "icons/google_icon.svg", alt: "google icon", class: "icon-login" %>
        </div>
      <% end %>
      <%= link_to user_google_oauth2_omniauth_authorize_path, method: :post, class:"social-login-btn"  do%>
       <div class="content-login-btn">
          <p>Sign in with Facebook</p>
          <%= image_tag "icons/fb_blue_icon.svg", alt: "facebook icon", class: "icon-login" %>
       </div>
      <% end %>
  </div>
  <h6>Don't have an account yet? <%= link_to "Sign up", new_registration_path(resource_name) %> </h6>
</div>


<%# omniauth-google-oauth2 1.0.x uses OmniAuth 2 and requires using HTTP Post to initiate authentication: %>
